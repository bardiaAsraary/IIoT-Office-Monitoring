[
    {
        "id": "wamp-connection",
        "type": "wamp",
        "broker": "wss://localhost:8080/ws",
        "realm": "iot_realm",
        "tls": {
            "ca": "../certs/ca-cert.pem",
            "cert": "../certs/mcu-cert.pem",
            "key": "../certs/mcu-key.pem"
        },
        "autoReconnect": true
    },
    {
        "id": "sensor-data",
        "type": "wamp in",
        "name": "",
